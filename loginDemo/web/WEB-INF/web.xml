<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>checkName</servlet-name>
        <servlet-class>cn.fan.CheckNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkWord</servlet-name>
        <servlet-class>cn.fan.web.CheckWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCities</servlet-name>
        <servlet-class>cn.fan.web.GetCitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkName</servlet-name>
        <url-pattern>/checkName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkWord</servlet-name>
        <url-pattern>/checkWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCities</servlet-name>
        <url-pattern>/getCities</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getCities02</servlet-name>
        <servlet-class>cn.fan.web.GetCitiesServlet02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCities02</servlet-name>
        <url-pattern>/getCities02</url-pattern>
    </servlet-mapping>
</web-app>